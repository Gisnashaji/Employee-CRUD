@page
@model Employee.Pages.Users.IndexModel

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="~/css/Index.css" asp-append-version="true" />


<p>
    <a asp-page="Create" class="button"><b>Create New Employee</b></a>
</p>
<table class="table">
    <thead class="tab">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.User) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-page="./Edit" class="edit" asp-route-id="@item.Id">Edit</a> 
                <a asp-page="./Details" class="details" asp-route-id="@item.Id">Details</a> 
                <a asp-page="./Delete" class="delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>















